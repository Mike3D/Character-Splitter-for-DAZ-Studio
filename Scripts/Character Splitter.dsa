	var wgt = new DzFloatSlider(parent);
	layout.addWidget(wgt, row, 1);
	wgt.value = value;
	wgt.sensitivity = sensitivity;
	wgt.displayAsPercent = asPercent;
	wgt.textEditable = editable;
